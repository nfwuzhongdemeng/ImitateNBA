<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardBackgroundColor="@android:color/transparent"
    android:foreground="?attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/item_top_new_drawee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/tranGray"
        android:layout_gravity="bottom"
        >
        <TextView
            android:id="@+id/item_top_new_txt_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="left|start"
            android:textSize="16sp"
            android:text="30天30队之步行者，乔治出走，球队重建"/>
        <TextView
            android:id="@+id/item_top_new_txt_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="right|end"
            android:textSize="10sp"
            android:text="2017-09-08 10:48:45"/>
    </LinearLayout>
</android.support.v7.widget.CardView>